<?php




$codcur = $_GET["modificar_cod_cur"];
$descripcion = $_GET["modificar_descripcion"];
$tutor = $_GET["modificar_tutor"];
$horas = $_GET["modificar_horas"];

$mysqli = new mysqli ( "localhost", "root", "", "ocupacional" );
$mysqli->set_charset ( "utf8" );
$result = $mysqli->query ( "UPDATE `cursos` SET ,`DESCRIPCION`='$descripcion',`HORAS`='$horas',`TUTOR`='$tutor' WHERE COD_CUR = '$codcur'" );

header("Location: http://localhost/Eclipse/PracticaPHP/views/cursos.php"); /* Redirect browser */
exit();