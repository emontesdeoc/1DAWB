<?php

$codalu = $_POST["modificar_codalu"];
$codcur = $_POST["modificar_codcur"];
$dni = $_POST["modificar_dni"];
$apellido = $_POST["modificar_apellido"];
$nombre = $_POST["modificar_nombre"];

$mysqli = new mysqli ( "localhost", "root", "", "ocupacional" );
$mysqli->set_charset ( "utf8" );
$mysqli->query ( "INSERT INTO `alumnos`(`COD_ALU`, `COD_CUR`, `DNI`, `APELLIDOS`, `NOMBRE`) VALUES ('$codalu','$codcur','$dni','$apellido','$nombre')" );


header("Location: http://localhost/Eclipse/PracticaPHP/views/alumnos.php"); /* Redirect browser */
exit();